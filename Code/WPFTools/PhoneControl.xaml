<UserControl x:Class="WPFTools.PhoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Yellow"
             >
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20">
            <Label Content="Telefonnummer:"></Label>
            <TextBox Text="{Binding Number}" Width="500"></TextBox>
        </StackPanel>
        <Button Command="{Binding CallNumberCommand}" HorizontalAlignment="Center" Background="Red" Width="120" Height="50" FontSize="25" FontWeight="Bold" Content="Anrufen"></Button>
    </StackPanel>
</UserControl>
